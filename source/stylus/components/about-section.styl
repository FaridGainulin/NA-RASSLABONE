.about-section
  background-image: url('../images/about-section-bg.jpg')
  background-repeat: no-repeat
  background-position: center
  background-size: cover
  background-color #002A1A

  &__container
    position relative
    padding 20px 0 20px 0
    +above($breakpoints.sm)
      padding 60px 0 70px 0
    +above($breakpoints.md)
      padding 80px 0 90px 0
    +above($breakpoints.xxl)
      padding 108px 0 110px 0

  &__logo
    position: absolute
    width: 50px;
    height: auto;
    top: 36px;
    left: 14px;
    +above($breakpoints.sm)
      width 70px
      top: 400px
    +above($breakpoints.md)
      width 85px
      top: 500px
    +above($breakpoints.xxl)
      width 101px
      top: 663px

  &__box
    display: flex
    flex-direction: column-reverse
    align-items: center
    gap: 20px
    padding-bottom 20px
    +above($breakpoints.sm)
      flex-direction: row
      align-items: flex-end
      padding-bottom 40px
    +above($breakpoints.md)
      gap: 45px
      padding-bottom 60px
    +above($breakpoints.xxl)
      padding-bottom 85px
      gap: 145px

  &__title-mobile
    padding 0 0 5px 0
    background: linear-gradient(219deg, #5bd98d 0%, #30734b 100%);
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    +above($breakpoints.sm)
      display: none

  &__sub-title-mobile
    padding 0 0 20px 76px
    +above($breakpoints.sm)
      display: none

  &__title-mobile,
  &__sub-title-mobile,
  &__text,
  &__bottom-text
    text-align: center
    +above($breakpoints.sm)
      text-align: start

  &__title
    display: none
    +above($breakpoints.sm)
      display: block
      background: linear-gradient(219deg, #5bd98d 0%, #30734b 100%);
      background-clip: text;
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      padding 0 0 10px 100px
    +above($breakpoints.md)
      padding 0 0 10px 150px
    +above($breakpoints.xxl)
      padding 0 0 10px 227px

  &__sub-title
    display: none
    +above($breakpoints.sm)
      display: block
      padding 0 0 25px 260px
    +above($breakpoints.md)
      padding 0 0 30px 405px
    +above($breakpoints.xxl)
      padding 0 0 40px 525px

  &__text
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    +above($breakpoints.sm)
      gap: 10px
      align-items: flex-start
    +above($breakpoints.md)
      gap: 15px
    +above($breakpoints.xxl)
      gap: 22px
      line-height 150%

  &__text-block-2
    +above($breakpoints.sm)
      margin-left 90px
    +above($breakpoints.md)
      margin-left 135px
    +above($breakpoints.xxl)
      margin-left 213px

  &__text-block-3
    +above($breakpoints.sm)
      margin-left 180px
    +above($breakpoints.md)
      margin-left 250px
    +above($breakpoints.xxl)
      margin-left 407px

  &__bottom
    display: flex
    flex-direction: column
    align-items: center
    gap: 20px
    +above($breakpoints.sm)
      flex-direction: row
      justify-content flex-start
      gap: 30px
    +above($breakpoints.md)
      gap: 50px
    +above($breakpoints.xxl)
      gap: 70px

  &__bottom-text
    +above($breakpoints.sm)
      line-height 147%
    +above($breakpoints.xxl)
      padding-bottom 30px

  &__form
    display: flex
    flex-direction: row
    flex-wrap: wrap
    justify-content center
    gap: 8px
    width 260px
    +above($breakpoints.sm)
      width 485px
    +above($breakpoints.md)
      width 650px
      gap: 10px
    +above($breakpoints.xxl)
      width 752px
      gap: 16px

.about-item
  +above($breakpoints.sm)
    width 156px
  +above($breakpoints.md)
    width 210px
  +above($breakpoints.xxl)
    width 240px
