.about-section
  background-image: url('../images/about-section-bg.jpg')
  background-repeat: no-repeat
  background-position: center
  background-size: cover
  background-color #002A1A

  &__container
    position relative
    padding 20px 0 20px 0
    +above($breakpoints.sm)
      padding 60px 0 70px 0
    +above($breakpoints.md)
      padding 80px 0 90px 0
    +above($breakpoints.xxl)
      padding 108px 0 110px 0

  &__box
    display: flex
    flex-direction: column-reverse
    align-items: center
    gap: 20px
    padding-bottom 20px
    +above($breakpoints.sm)
      flex-direction: row
      align-items: flex-end
      padding-bottom 40px
    +above($breakpoints.md)
      gap: 45px
      padding-bottom 60px
    +above($breakpoints.xxl)
      padding-bottom 85px
      gap: 145px

  &__box-text
    +above($breakpoints.sm)
      width 400px
    +above($breakpoints.md)
      width 560px

  &__title-mobile
    padding 0 0 5px 0
    background: linear-gradient(219deg, #5bd98d 0%, #30734b 100%);
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    +above($breakpoints.sm)
      display: none

  &__sub-title-mobile
    padding 0 0 20px 76px
    +above($breakpoints.sm)
      display: none

  &__title-mobile,
  &__sub-title-mobile,
  &__text,
  &__bottom-text
    text-align: center
    +above($breakpoints.sm)
      text-align: start

  &__title
    display: none
    +above($breakpoints.sm)
      display: block
      background: linear-gradient(219deg, #5bd98d 0%, #30734b 100%);
      background-clip: text;
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      padding 0 0 10px 0
    +above($breakpoints.md)
      padding 0 0 10px 0
    +above($breakpoints.xxl)
      padding 0 0 10px 0

  &__sub-title
    display: none
    +above($breakpoints.sm)
      display: block
      padding 0 0 25px 153px
    +above($breakpoints.md)
      padding 0 0 30px 255px
    +above($breakpoints.xxl)
      padding 0 0 30px 300px

  &__text
    +above($breakpoints.xxl)
      line-height 150%

  &__box-img
    background-image: url('../images/about-section-img.jpg')
    background-repeat: no-repeat
    background-position: center
    background-size: cover
    background-color #2A413A
    width 300px
    height: 363px
    padding 20px
    display: flex
    flex-direction: column
    justify-content flex-end
    gap: 10px
    +above($breakpoints.sm)
      padding 20px
    +above($breakpoints.md)
      padding 20px
    +above($breakpoints.xxl)
      padding 10px 10px 42px 50px
      width 380px
      height: 480px

  &__bottom
    display: flex
    flex-direction: column
    align-items: center
    gap: 20px
    +above($breakpoints.sm)
      flex-direction: row
      gap: 40px
    +above($breakpoints.md)
      gap: 80px
    +above($breakpoints.xxl)
      gap: 165px

  &__bottom-text
    +above($breakpoints.sm)
      line-height 147%
    +above($breakpoints.xxl)
      padding-bottom 30px

  &__form
    display: flex
    flex-direction: row
    flex-wrap: wrap
    justify-content center
    gap: 8px
    width 260px
    +above($breakpoints.sm)
      width 485px
    +above($breakpoints.md)
      width 650px
      gap: 10px
    +above($breakpoints.xxl)
      width 752px
      gap: 16px

.about-item
  +above($breakpoints.sm)
    width 156px
  +above($breakpoints.md)
    width 210px
  +above($breakpoints.xxl)
    width 240px
