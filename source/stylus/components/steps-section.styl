.steps-section
  background-image: url('../images/steps-section-bg.jpg')
  background-repeat: no-repeat
  background-position: center
  background-size: cover
  background-color #f8f8f9

  &__container
    position relative
    padding 20px 0 20px 0
    +above($breakpoints.sm)
      padding 50px 0 50px 0
    +above($breakpoints.md)
      padding 70px 0 70px 0
    +above($breakpoints.xxl)
      padding 100px 0 98px 0

  &__title,
  &__sub-title,
  &__text,
  &__bottom-title
    text-align: center
    +above($breakpoints.sm)
      text-align: start

  &__title
    background: linear-gradient(90deg, #5bd98d 0%, #30734b 100%);
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    padding-bottom 10px
    +above($breakpoints.xxl)
      padding-bottom 20px

  &__sub-title
    color: $color-grey-38
    +above($breakpoints.md)
      line-height 148%

  &__text
    color $color-grey-67
    padding 20px 0 20px 0
    +above($breakpoints.sm)
      padding 20px 0 30px 0
    +above($breakpoints.md)
      padding 20px 0 35px 0
      line-height 147%
    +above($breakpoints.xxl)
      padding 20px 0 40px 0

  &__cards
    +above($breakpoints.sm)
      display: flex
      flex-direction: row
      flex-wrap: wrap
      gap: 16px
    +above($breakpoints.md)
      gap: 30px
    +above($breakpoints.xxl)
      gap: 42px

  &__card
    width 280px !important
    display: flex
    flex-direction: column
    align-items: center
    text-align: center
    +above($breakpoints.sm)
      align-items: flex-start
      text-align: start
      width 200px !important
    +above($breakpoints.md)
      width 250px !important
    +above($breakpoints.xxl)
      width 250px !important

  &__card-num
    display: flex
    justify-content center
    align-items: center
    width 60px
    height: 20px
    margin-bottom 10px
    background: linear-gradient(90deg, #5bd98d 0%, #30734b 100%);
    border-radius: 16px
    +above($breakpoints.md)
      width 100px
      height: 33px
      margin-bottom 15px

  &__bottom-title
    color $color-grey-38
    padding 0 0 20px 0
    +above($breakpoints.sm)
      padding 30px 0 25px 0
    +above($breakpoints.md)
      padding 40px 0 25px 0
    +above($breakpoints.xxl)
      line-height 147%
      padding 60px 0 45px 0

  &__bottom-btn
    width 260px !important
    margin 0 auto
    +above($breakpoints.sm)
      width 240px !important
      margin 0

  &__img-mobile
    width 300px
    height: auto
    margin 20px auto 0
    +above($breakpoints.sm)
      display: none

  &__img
    display: none
    +above($breakpoints.sm)
      display: block
      position: absolute
      width: 280px;
      height: auto;
      left: 0;
      bottom: 57px;
    +above($breakpoints.md)
      width 350px
      bottom: 116px
    +above($breakpoints.xxl)
      width 480px
      bottom: 98px

  &__box
    +above($breakpoints.sm)
      margin-left 310px
    +above($breakpoints.md)
      margin-left 400px
    +above($breakpoints.xxl)
      margin-left 600px

.card-line
  +above($breakpoints.sm)
    position relative
    &:after
      content: ""
      position: absolute
      width 178px
      height: 1px
      background-color #D3D4D4
      left: 60px
      top: 50%
      transform: translateY(-50%)
      +above($breakpoints.md)
        width 230px
        left: 100px
