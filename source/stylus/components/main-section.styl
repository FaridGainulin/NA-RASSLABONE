  &__img-tape-2
    position: absolute
    height: auto
    bottom: 0
    left: 50%
    transform: translateX(-50%)
    width 768px
    bottom: 0
    +above($breakpoints.sm)
      width 1024px
      bottom: 35px
    +above($breakpoints.md)
      width 1400px
      bottom: 40px
    +above($breakpoints.xxl)
      width 1920px
      height: auto
      bottom: 13px
